<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnC2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnA2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnA1"
        style="@style/button"
        android:tag="a1"
        app:layout_constraintBottom_toBottomOf="@+id/btnA3"
        app:layout_constraintEnd_toStartOf="@+id/btnA2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnA2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnA2"
        android:tag="a2"
        style="@style/refButton"
        app:layout_constraintBottom_toTopOf="@+id/btnB2"
        app:layout_constraintEnd_toStartOf="@+id/btnA3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnA1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnB3"
        style="@style/button"
        android:tag="b3"
        app:layout_constraintBottom_toBottomOf="@+id/btnB2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnB2"
        app:layout_constraintTop_toTopOf="@+id/btnB2"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnC1"
        style="@style/button"
        android:tag="c1"
        app:layout_constraintBottom_toBottomOf="@+id/btnC2"
        app:layout_constraintEnd_toStartOf="@+id/btnC2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnC2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnA3"
        style="@style/button"
        android:tag="a3"
        app:layout_constraintBottom_toBottomOf="@+id/btnA2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnA2"
        app:layout_constraintTop_toTopOf="@+id/btnA2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnB2"
        android:tag="b2"
        style="@style/refButton"
        app:layout_constraintBottom_toTopOf="@+id/btnC2"
        app:layout_constraintEnd_toStartOf="@+id/btnB3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnB1"
        app:layout_constraintTop_toBottomOf="@+id/btnA2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnC2"
        style="@style/refButton"
        android:tag="c2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnC3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnC1"
        app:layout_constraintTop_toBottomOf="@+id/btnB2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnC3"
        style="@style/button"
        android:tag="c3"
        app:layout_constraintBottom_toBottomOf="@+id/btnC2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnC2"
        app:layout_constraintTop_toTopOf="@+id/btnC2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnB1"
        style="@style/button"
        android:tag="b1"
        app:layout_constraintBottom_toBottomOf="@+id/btnB2"
        app:layout_constraintEnd_toStartOf="@+id/btnB2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnB2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="63dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toTopOf="@+id/btnA2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>