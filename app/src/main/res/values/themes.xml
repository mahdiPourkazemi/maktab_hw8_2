<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maktab67_HW8_2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="android:onClick">buttonClicked</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:text">@string/nothing_name</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="refButton" parent="Widget.Material3.Button">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:onClick">buttonClicked</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:text">@string/nothing_name</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myText" >

    </style>
</resources>